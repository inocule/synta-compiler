{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Backend (Go)",
      "type": "shell",
      "command": "go",
      "args": ["run", "main.go"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)\\((\\d+):(\\d+)\\):\\s+(.*)$",
          "file": 1,
          "location": 2,
          "message": 4
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^Analyzer HTTP server listening",
          "endsPattern": "^$"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true
      }
    },
    {
      "label": "Run Frontend (React)",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*VITE.*ready in.*",
          "endsPattern": "^$"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true
      }
    },
    {
      "label": "Run Both (Backend + Frontend)",
      "dependsOn": ["Run Backend (Go)", "Run Frontend (React)"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
